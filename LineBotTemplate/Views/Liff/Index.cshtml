
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">
        <form>
            <div class="form-group col-sm-3">
                <img src="https://i.imgur.com/pdSFfcO.jpg" alt="Alternate Text" style="width:100%" />
            </div>
            <div class="form-group col-sm-3">
                <label>
                    顏色
                </label>
                <div class="input-group">
                    <input class="form-control" type="text">
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="button">+</button>
                    </div>
                </div>
            </div>
            <div class="form-group col-sm-3">
                <label>
                    尺寸
                </label>
                <div class="input-group">
                    <input class="form-control" type="text">
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="button">+</button>
                    </div>
                </div>
            </div>
            <div class="form-group col-sm-3">
                <label>
                    數量
                </label>
                <select class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                </select>
            </div>
        </form>
    </div>
</div>
